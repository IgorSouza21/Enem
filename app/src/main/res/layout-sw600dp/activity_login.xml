<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Login">

    <EditText
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/etNome" android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="4dp" android:layout_marginStart="7dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="7dp"
            android:layout_marginTop="364dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="@string/nome"
            app:layout_constraintHorizontal_bias="0.456"/>
    <EditText
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/etSenha"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/etNome"
            android:hint="@string/senha" app:layout_constraintHorizontal_bias="0.46"/>
    <Button
            android:layout_width="119dp"
            android:layout_height="54dp"
            android:id="@+id/btLogin" android:background="@drawable/login"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/etSenha"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.475"
            app:layout_constraintVertical_bias="0.234"/>
    <ImageView
            android:layout_width="247dp"
            android:layout_height="241dp" app:srcCompat="@drawable/firebase"
            android:id="@+id/imageView2" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/etNome" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="100dp" android:layout_marginRight="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.651"
            app:layout_constraintVertical_bias="0.0"/>
</android.support.constraint.ConstraintLayout>