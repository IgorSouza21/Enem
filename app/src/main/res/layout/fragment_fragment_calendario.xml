<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".FragmentCalendario">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:layout_width="210dp"
                android:layout_height="62dp"
                android:id="@+id/tvDisciplina2"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp" android:textSize="50sp" android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" app:fontFamily="cursive"
                android:textStyle="bold" android:textColor="@color/colorPrimary"
                android:layout_marginBottom="32dp" app:layout_constraintBottom_toTopOf="@+id/calender"
                app:layout_constraintHorizontal_bias="0.443" android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent" android:text="@string/nav_calender"
                app:layout_constraintVertical_bias="0.444"/>
        <CalendarView
                android:layout_width="wrap_content"
                android:layout_height="296dp"
                android:id="@+id/calender" android:layout_marginBottom="140dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                app:layout_constraintHorizontal_bias="0.4"
        />
    </android.support.constraint.ConstraintLayout>
</FrameLayout>